header.header
    .header__wrapper
            .header__column
                a(href=routes.home)
                    i.fab.fa-youtube
                    h4 NINJA-TUBE
            .header__column
                form(action=routes.search, method="get")
                    input(type="text", placeholder="Search by term...", name="term")
            .header__column
                ul
                    if !loggedUser
                        li
                            a(href=routes.join) Join
                        li
                            a(href=routes.login) Log In
                    else 
                        li
                            a(href=`/videos${routes.upload}`) Upload
                        li
                            a(href=routes.logout) Log Out
                        li
                            a(href=routes.me)
                                if loggedUser.githubId
                                    img(src=`${loggedUser.avatarUrl}`)
                                else 
                                    img(src=`/${loggedUser.avatarUrl}`)
